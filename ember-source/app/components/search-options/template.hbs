<!-- Search options -->
<div class="container-fluid search">
    <div class="row main-search-options">
        <div class="col-lg-12">
            <!-- Header and search -->
            <h4>SEARCH JOB TRENDS</h4>
            {{#bs-button type="primary" class="pull-right toggle-additional" action="toggleAdditionalOptions" }}
                <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-chevron-right additional" aria-hidden="true" data-value="right"></span>
            {{/bs-button}}
            {{#bs-button type="primary" class="pull-right"}}
                Search
            {{/bs-button}}
            <span>
                {{input id="trend-search" class="form-control" type="text" placeholder="What skill or location are you interested in?"}}
            </span>
        </div>
    </div>

    <!-- Aditional Options -->
    <div class="row">
        <div class="col-lg-12">
            {{#bs-collapse collapsed=true class="additional-options"}}
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 col-lg-2 control-label">Required Skills:</label>
                        <div class="col-sm-10 col-lg-9">
                            {{input id="skill-search" class="form-control" type="text" placeholder="Type a skill"}}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-lg-2 control-label">Search Locations:</label>
                        <div class="col-sm-10 col-lg-9">
                            {{input id="location-search" class="form-control" type="text" placeholder="City or country names"}}
                        </div>
                    </div>
                </div>
            {{/bs-collapse}}
        </div>
    </div>
</div>
